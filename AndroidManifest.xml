<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rada.xkcd"
    android:versionName="0.5.5 alpha" android:versionCode="10">
  <application android:icon="@drawable/icon" android:label="@string/app_name">
    <activity android:name=".ComicList"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    
    <activity android:name=".ComicView">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <action android:name="com.rada.xkcd.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.ALTERNATIVE" />
        <category android:name="android.intent.category.SELECTED_ALTERNATIVE" />
      </intent-filter>
    </activity>

    <service android:name=".ComicDownloader">
      <intent-filter>
        <action android:name="com.rada.xkcd.action.DOWNLOAD" />
        <action android:name="com.rada.xkcd.action.CLEAR" />
      </intent-filter>
    </service>
</application>

<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" />
</manifest> 